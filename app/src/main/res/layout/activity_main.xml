<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:orientation="vertical"
    tools:context="com.example.tjsid.cry.MainActivity">

    <LinearLayout
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5pt"
        android:layout_marginRight="5pt">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:text="Bitcoin"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:text="Litecoin"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:text="Bcash"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5pt"
        android:layout_marginRight="5pt"
        android:layout_marginBottom="2pt">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            android:background="@drawable/left_corner"
            android:textColor="@color/colorWhite"
            android:text=" Maior valor"/>

        <TextView
            android:id="@+id/btcMaiorValor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="@string/zerado"
            android:background="@color/colorSeaGreen"
            android:layout_marginRight="2dp"/>

        <TextView
            android:id="@+id/ltcMaiorValor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:background="@color/colorSeaGreen"
            android:text="@string/zerado"
            android:layout_marginRight="2dp"/>

        <TextView
            android:id="@+id/bchMaiorValor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="@string/zerado"
            android:background="@drawable/right_corner"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5pt"
        android:layout_marginRight="5pt"
        android:layout_marginBottom="2pt">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            android:background="@drawable/left_corner"
            android:textColor="@color/colorWhite"
            android:text=" Menor valor"/>

        <TextView
            android:id="@+id/btcMenorValor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="@string/zerado"
            android:background="@color/colorSeaGreen"
            android:layout_marginRight="2dp"/>

        <TextView
            android:id="@+id/ltcMenorValor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:background="@color/colorSeaGreen"
            android:text="@string/zerado"
            android:layout_marginRight="2dp"/>

        <TextView
            android:id="@+id/bchMenorValor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="@string/zerado"
            android:background="@drawable/right_corner"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5pt"
        android:layout_marginRight="5pt"
        android:layout_marginBottom="2pt">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            android:background="@drawable/left_corner"
            android:textColor="@color/colorWhite"
            android:text=" Valor compra"/>

        <TextView
            android:id="@+id/btcVCompraValor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="@string/zerado"
            android:background="@color/colorSeaGreen"
            android:layout_marginRight="2dp"/>

        <TextView
            android:id="@+id/ltcVCompraValor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:background="@color/colorSeaGreen"
            android:text="@string/zerado"
            android:layout_marginRight="2dp"/>

        <TextView
            android:id="@+id/bchVCompraValor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="@string/zerado"
            android:background="@drawable/right_corner"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5pt"
        android:layout_marginRight="5pt"
        android:layout_marginBottom="2pt">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            android:background="@drawable/left_corner"
            android:textColor="@color/colorWhite"
            android:text=" Valor venda"/>

        <TextView
            android:id="@+id/btcValorVenda"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="@string/zerado"
            android:background="@color/colorSeaGreen"
            android:layout_marginRight="2dp"/>

        <TextView
            android:id="@+id/ltcValorVenda"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:background="@color/colorSeaGreen"
            android:text="@string/zerado"
            android:layout_marginRight="2dp"/>

        <TextView
            android:id="@+id/bchValorVenda"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="@string/zerado"
            android:background="@drawable/right_corner"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5pt"
        android:layout_marginRight="5pt"
        android:layout_marginBottom="2pt">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            android:background="@drawable/left_corner"
            android:textColor="@color/colorWhite"
            android:text=" Volume"/>

        <TextView
            android:id="@+id/btcVolume"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="@string/zerado"
            android:background="@color/colorSeaGreen"
            android:layout_marginRight="2dp"/>

        <TextView
            android:id="@+id/ltcVolume"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:background="@color/colorSeaGreen"
            android:text="@string/zerado"
            android:layout_marginRight="2dp"/>

        <TextView
            android:id="@+id/bchVolume"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="@string/zerado"
            android:background="@drawable/right_corner"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5pt"
        android:layout_marginRight="5pt"
        android:layout_marginBottom="5pt">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            android:background="@drawable/left_corner"
            android:textColor="@color/colorWhite"
            android:text=" Último preço"/>

        <TextView
            android:id="@+id/btcUltimoPreco"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="@string/zerado"
            android:background="@color/colorSeaGreen"
            android:layout_marginRight="2dp"/>

        <TextView
            android:id="@+id/ltcUltimoPreco"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:background="@color/colorSeaGreen"
            android:text="@string/zerado"
            android:layout_marginRight="2dp"/>

        <TextView
            android:id="@+id/bchUltimoPreco"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="@string/zerado"
            android:background="@drawable/right_corner"/>

    </LinearLayout>

    <TextView
        android:id="@+id/down_bar"
        android:layout_marginLeft="20pt"
        android:layout_marginRight="20pt"
        android:background="@drawable/down_bar"
        android:layout_width="match_parent"
        android:textColor="@color/colorWhite"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginBottom="5pt"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5pt">

        <TextView
            android:id="@+id/teste"
            android:textColor="@color/colorWhite"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/btnUpdate"
            android:layout_width="0pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:background="@null"
            android:src="@mipmap/update"
            android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/teste2"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <TextView
        android:id="@+id/outTeste"
        android:text="Últimos preços"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginLeft="5pt"
        android:layout_marginRight="5pt"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Data/Hora"
            android:textColor="@color/colorWhite"
            android:textAlignment="center"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:text="Bitcoin"
            android:textColor="@color/colorWhite"
            android:textAlignment="center"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"/>

        <TextView
            android:text="Litecoin"
            android:textColor="@color/colorWhite"
            android:textAlignment="center"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"/>

        <TextView
            android:text="BCash"
            android:textColor="@color/colorWhite"
            android:textAlignment="center"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginLeft="5pt"
        android:layout_marginRight="5pt"
        android:layout_height="wrap_content">

        <ListView
            android:id="@+id/listaDate"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_marginRight="1dp"
            android:layout_weight="1"/>
        <ListView
            android:id="@+id/listaBit"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_marginRight="1dp"
            android:layout_weight="0.75"/>
        <ListView
            android:id="@+id/listaLit"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_marginRight="1dp"
            android:layout_weight="0.75"/>
        <ListView
            android:id="@+id/listaBCash"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"/>

    </LinearLayout>

</LinearLayout>
